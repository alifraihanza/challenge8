<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabel User Game History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
  <a href="/view/createusergameshistory" class="btn btn-success m-3">Create User Game History</a>
  <a href="/home" class="btn btn-success m-3">Kembali</a>
    <table class="table m-3">
        <thead>
          <tr>
            <th scope="col" class="text-center">No</th>
            <th scope="col" class="text-center">Menang</th>
            <th scope="col" class="text-center">Kalah</th>
            <th scope="col" class="text-center">Tanggal History</th>
            <th scope="col" class="text-center">Video</th>
            <th scope="col" class="text-center">Create at</th>
            <th scope="col" class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
        <% usergameshistory.forEach((usergamehistory, index) => { %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= usergamehistory.menang %></td>
            <td><%= usergamehistory.kalah %></td>
            <td><%= usergamehistory.tanggal_history %></td>
            <td class="text-center">
              <video width="320" height="240" controls>
                <source src="/uploads/videos/<%= usergamehistory.video %>" type="video/mp4"/>
                <source src="/uploads/videos/<%= usergamehistory.video %>" type="video/webm"/>
                <source src="/uploads/videos/<%= usergamehistory.video %>" type="video/ogg"/>
              </video>
            </td>
            <td><%= moment(usergamehistory.created_at).format('D MMMM YYYY') %></td>
            <td>
              <a href="/view/updateformusergameshistory/<%= usergamehistory.id %>" class="btn btn-warning">Edit User Game</a>
              <a href="/view/deleteusergameshistory/<%= usergamehistory.id %>" class="btn btn-danger">Hapus</a>
            </td>
          </tr>
        <%})%>
        </tbody>
      </table>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
crossorigin="anonymous">
</script>

</html>